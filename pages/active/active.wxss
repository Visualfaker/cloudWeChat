page {
  width: 100%;
  height: 100%;
}

.tab {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.nav {
  height: 80rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  line-height: 80rpx;
  font-size: 16px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.active {
  color: #ff6471;
  position: relative;
}

.active:after {
  content: "";
  display: block;
  width: 100%;
  height: 5rpx;
  border-radius: 8rpx;
  background: skyblue;
  position: absolute;
  bottom: 0;
}

.content-container {
  padding-top: 180rpx;
  height: 100%;
  width: 100%;
  text-align: center;
}

.content {
  margin-top: 180rpx;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
