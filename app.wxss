/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  align-items: left;
  align-self: left;
  margin-top: 75rpx;
  border-radius: 50rpx;
  border: 1rpx solid #aaa;
  padding:5rpx 15rpx 6rpx 8rpx;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  align-self: center;
}

.userinfo-nickname {
  color: #aaa;
  align-self: center;
  font-size: 18rpx;
  margin-left: 10rpx;
}
